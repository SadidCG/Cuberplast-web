---
const {value, id} = Astro.props
---

<div >
    <button class="buton" type="submit"  id={id}>{value}</button>
</div>



<style>
.buton{
  background:rgb(30 58 138);
  width: 200px;
  padding: 10px;
  text-decoration: none;
  text-align: center;
  color: #fff;
  border-radius: 13px;
  border: none;
  border: 1px solid rgb(30 58 138);
  cursor: pointer;
  transition: all 300ms;
 margin-left: 50%;
  
}
.buton:hover{
  border: 1px solid rgb(30 58 138);
  color: rgb(30 58 138);
  background: none;
  
}


</style>