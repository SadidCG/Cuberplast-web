---
const {value, id,value2, id2} = Astro.props
---

<div class="botons">
    <button class="buton" type="submit"  id={id}>{value}</button>

    <button class="buton1" type="submit"  id={id2}>{value2 }</button>
</div>




<style>
  .butons{
    justify-content: center;
   
  }
.buton{
  background:#ff191d;
  width: 120px;
  padding: 6px;
  text-decoration: none;
  text-align: center;
  color: #fff;
  border-radius: 13px;
  border: none;
  border: 1px solid #ff191d;
  cursor: pointer;
  transition: all 300ms;
 margin-right: 5px;
  
}
.buton:hover{
  border: 1px solid #ff191d;
  color: #ff191d;
  background: none;
  
}
.buton1{
  background:rgb(30 58 138);
  width: 120px;
  padding: 6px;
  text-decoration: none;
  text-align: center;
  color: #fff;
  border-radius: 13px;
  border: none;
  border: 1px solid rgb(30 58 138);
  cursor: pointer;
  transition: all 300ms;

  
}
.buton1:hover{
  border: 1px solid rgb(30 58 138);
  color: rgb(30 58 138);
  background: none;
  
}


</style>